
<div class=" formHead flex flex-col justify-center content-end items-center p-4"> 

    <form action="/add-task" method="post" id="task-input" class=" flex flex-col-4 md:flex-row items-center justify-center md:space-y-0 md:space-x-6 w-full mx-auto rounded-md p-6"> 

        <div class="task w-full md:w-1/3 flex flex-col justify-end"> <!-- Task Input -->
            <label for="task" class="mb-1">Task</label>
            <input type="text" name="task" id="task-input" class="border-2 p-2 shadow-inner w-full rounded-xl" placeholder="Enter a task">
        </div>

        <div class="flex space-x-2 w-full md:w-2/3 gap-2"> <!-- Calendar -->
            <div class="date w-full flex flex-col justify-end"> 
                <label for="date" class="mb-1">Date</label>
                <input type="date" name="date" id="date-input" class="border-2 w-full rounded-xl p-2" required> 
            </div>
    
            <div class="priority w-full flex flex-col justify-end"> <!-- Priority options -->
                <label for="priority" class="mb-1">Priority</label>
                <select name="priority" class="border-2 p-2 w-full rounded-xl"> 
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>
            </div>
        </div>

        <div class="submit w-full md:w-1/3 flex flex-col items-center"> <!-- Submit button -->
            <button type="submit" class="w-1/2 p-2 mt-6 bg-blue-500 text-white rounded-xl">Submit</button>
        </div>
    
    </form>

</div>
    

</div>



<!-- DEfault date -->
<script>
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('date-input').value = today;
</script>