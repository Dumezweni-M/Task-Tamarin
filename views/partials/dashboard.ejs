<div id="main-wrapper" class="grid lg:grid-cols-3 gap-6 items-center p-2">


    
    
    
    <div class="time-date">
        <div class="border-2 text-center rounded-xl shadow-sm bg-gradient-to-b from-blue-500 to-purple-500 p-6 text-white font-bold">
            <h1 class="text-4xl">22:53</h1>
            <h1 class="text-3xl">30-Sept-2024</h1>
        </div>
        <div class="border-2 text-center rounded-xl shadow-sm bg-gradient-to-b from-blue-500 to-purple-500 p-6 text-white font-bold">
            <h1 class="text-4xl">Pomodoro Timer</h1>
            <h1 class="text-3xl">30:41</h1>
            <button>start</button></div>
    </div>
    

    
    <div class="border-2 text-center p-2 shadow-sm ">  <!-- Daily Tasks -->
        <div><h1 class="text-2xl font-bold">Daily Tasks</h1></div>
        <ul>
            <% tasks.forEach(task => { %>  
                <li class="flex items-center justify-between p-2 border-b">
                    <div class="flex items-center space-x-4">
                        <h3>&rarr; <%= task.task %></h3>
                    </div>
                    <div class="flex items-center space-x-4">
                        <h3>Due: <%= task.date ? new Date(task.date).toLocaleDateString() : 'No due date' %></h3>
                        <button class="border-2 p-2">Delete</button> <!-- Add delete button functionality as needed -->
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>

    

    <div class="border-2 text-center p-2 shadow-sm">Weekly Goals</div>

    <div class="border-2 text-center p-4 shadow-sm">
        <h2 class="font-bold">Food for thought</h2>
        <p>"I've grown to realize that, the more I practice, The luckier I get" - Thomas Jefferson</p>
    </div>

    <div class="border-2 text-center p-2 shadow-sm">Notes</div>
</div>